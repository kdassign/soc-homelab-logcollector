filebeat.inputs:
- type: filestream
  id: system-logs
  enabled: true
  paths:
    - /var/log/syslog
    - /var/log/auth.log
    - /var/log/kern.log
  fields:
    log_source: "ubuntu-system"
    environment: "homelab"
    project: "soc-analyst-lab"

- type: filestream
  id: apt-logs
  enabled: true
  paths:
    - /var/log/apt/*.log
  fields:
    log_source: "ubuntu-apt" 
    environment: "homelab"
    project: "soc-analyst-lab"

output.elasticsearch:
  hosts: ["INSERT_IP_ADDRESS_FOR_SECURITY_ONION_HERE"]
  protocol: "https"
  ssl.verification_mode: none
  username: "KIBANA_USER"
  password: "KIBANA_USER_PASSWORD"

setup.ilm.enabled: false
setup.template.enabled: false

logging.level: info
logging.to_files: true
logging.files:
  path: /var/log/filebeat
  name: filebeat.log
  keepfiles: 7
